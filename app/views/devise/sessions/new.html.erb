<div class="container mx-auto max-w-md p-6 space-y-6">
  <h2 class="text-3xl font-bold text-[var(--color-pastel-purple)]"><%= t('.title') %></h2>

  <div class="bg-white p-6 rounded-lg shadow-md border-2 border-[var(--color-pastel-pink)] space-y-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
      <% if alert %>
        <div class="p-4 bg-red-50 border-2 border-red-200 rounded space-y-2">
          <div class="text-[var(--color-pastel-red)]">
            <%= alert %>
          </div>
        </div>
      <% end %>
      <div class="field space-y-2">
        <%= f.label :email, t('activerecord.attributes.user.email'), class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[var(--color-pastel-pink)] focus:ring focus:ring-[var(--color-pastel-pink)] focus:ring-opacity-50" %>
      </div>

      <div class="field space-y-2">
        <%= f.label :password, t('activerecord.attributes.user.password'), class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[var(--color-pastel-pink)] focus:ring focus:ring-[var(--color-pastel-pink)] focus:ring-opacity-50" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit t('.submit'), class: "w-full bg-[var(--color-pastel-pink)] filter hover:brightness-90 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="mt-4 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
