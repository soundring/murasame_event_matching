<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.links.sign_in'), new_session_path(resource_name), 
      class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.links.sign_up'), new_registration_path(resource_name), 
      class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.links.forgot_password'), new_password_path(resource_name), 
      class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.links.confirmation_instructions'), new_confirmation_path(resource_name), 
      class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.links.unlock_instructions'), new_unlock_path(resource_name), 
      class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to t('devise.links.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), 
        omniauth_authorize_path(resource_name, provider), 
        data: { turbo: false },
        class: "text-[var(--color-pastel-purple)] hover:text-[var(--color-pastel-pink)] transition-colors duration-200" %>
  <% end %>
<% end %>
