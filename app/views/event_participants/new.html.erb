<div class="container mx-auto max-w-4xl p-6 space-y-8">
  <h2 class="text-3xl font-bold text-[var(--color-pastel-purple)]">参加登録</h2>
  
  <p class="text-lg">以下のイベントに参加登録します。</p>
  
  <div>
    <div>
      <h3 class="text-xl font-bold"><%= @event.title %></h3>
    </div>
    
    <%= form_with model: @event_participant, url: event_participants_path(@event), class: "space-y-4" do |form| %>
      <%= render "shared/error_messages", resource: @event_participant %>
  
      <div class="flex justify-end space-x-2">
        <%= link_to 'キャンセル', event_path(@event), class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold py-2 px-4 rounded" %>
        <%= form.submit "参加登録する", class: "bg-[var(--color-pastel-pink)] filter hover:brightness-90 text-white font-bold py-2 px-4 rounded" %>
      </div> 
    <% end %>
  </div>
</div>
