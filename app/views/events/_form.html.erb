<div class="container mx-auto max-w-4xl p-6">
  <%= form_with model: [eventable, event], class: "bg-white p-6 rounded-lg shadow-md border-2 border-[var(--color-pastel-pink)] space-y-4" do |form| %>
    <%= render "shared/error_messages", resource: event %>

    <div class="field">
      <%= form.label :title, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.text_field :title, required: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :subtitle, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.text_field :subtitle, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.text_area :description, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md", rows: 4 %>
    </div>

    <%= render "shared/file_input", form: form, field: :image, label_text: 'イベント画像', dom_id: 'file-name' %>

    <div class="field">
      <%= form.label :event_start_at, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.datetime_local_field :event_start_at, required: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :event_end_at, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.datetime_local_field :event_end_at, required: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :recruitment_start_at, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.datetime_local_field :recruitment_start_at, required: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :recruitment_closed_at, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.datetime_local_field :recruitment_closed_at, required: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :location, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.text_field :location, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :max_participants, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.number_field :max_participants, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="field">
      <%= form.label :status, class: "block text-sm font-medium text-[var(--color-pastel-purple)]" %>
      <%= form.select :status, Event.statuses.keys.map { |s| [s.humanize, s] }, include_blank: true, class: "mt-1 block w-full p-2 border-2 border-[var(--color-pastel-blue)] rounded-md" %>
    </div>

    <div class="actions">
      <%= form.submit '保存', class: "bg-[var(--color-pastel-pink)] filter hover:brightness-90 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>