<h1>イベント一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th>場所</th>
      <th>最大参加者数</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_start_at %></td>
        <td><%= event.event_end_at %></td>
        <td><%= event.location %></td>
        <td><%= event.max_participants %></td>
        <td><%= event.status %></td>
        <td><%= link_to '詳細', event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @eventable.is_a?(EventGroup) %>
  <%= link_to '新規イベント作成', new_event_group_event_path %>
  <%= link_to 'イベントグループに戻る', event_group_path(@eventable) %>
<% else %>
   <%# # TODO: 個人イベント作成＋ダッシュボードに戻る %>
<% end %>